{
  "JwtSettings": {
    "Secret": "SuperSecretKeyForJWTTokenGeneration2025!",
    "Issuer": "eLibrary",
    "Audience": "eLibrary-Clients"
  },
  "ReverseProxy": {
    "Routes": {
      "catalog-route": {
        "ClusterId": "catalog",
        "Match": {
          "Path": "/api/catalog/{**catch-all}"
        }
      },
      "auth-route": {
        "ClusterId": "auth",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "importer-route": {
        "ClusterId": "importer",
        "Match": {
          "Path": "/api/importer/{**catch-all}"
        }
      },
      "recommender-route": {
        "ClusterId": "recommender",
        "Match": {
          "Path": "/api/recommendations/{**catch-all}"
        }
      },
      "analytics-route": {
        "ClusterId": "analytics",
        "Match": {
          "Path": "/api/analytics/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "catalog": {
        "Destinations": {
          "destination1": {
            "Address": "http://catalog-service:80"
          }
        }
      },
      "auth": {
        "Destinations": {
          "destination1": {
            "Address": "http://auth-service:80"
          }
        }
      },
      "importer": {
        "Destinations": {
          "destination1": {
            "Address": "http://importer-service:80"
          }
        }
      },
      "recommender": {
        "Destinations": {
          "destination1": {
            "Address": "http://recommender-service:80"
          }
        }
      },
      "analytics": {
        "Destinations": {
          "destination1": {
            "Address": "http://analytics-service:80"
          }
        }
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    }
  },
  "AllowedHosts": "*"
}

