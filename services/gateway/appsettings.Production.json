{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "catalog-route": {
        "ClusterId": "catalog",
        "Match": {
          "Path": "/api/catalog/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/books/{**catch-all}"
          }
        ]
      },
      "auth-route": {
        "ClusterId": "auth",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "importer-route": {
        "ClusterId": "importer",
        "Match": {
          "Path": "/api/importer/{**catch-all}"
        }
      },
      "recommender-route": {
        "ClusterId": "recommender",
        "Match": {
          "Path": "/api/recommendations/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "catalog": {
        "Destinations": {
          "destination1": {
            "Address": "http://catalog-service:80"
          }
        }
      },
      "auth": {
        "Destinations": {
          "destination1": {
            "Address": "http://auth-service:80"
          }
        }
      },
      "importer": {
        "Destinations": {
          "destination1": {
            "Address": "http://importer-service:80"
          }
        }
      },
      "recommender": {
        "Destinations": {
          "destination1": {
            "Address": "http://recommender-service:80"
          }
        }
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Yarp": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
